                    android:layout_marginLeft="55dp"
                    android:gravity="left"
                    android:text="20/03/2022, 14:52"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/typeTransaction"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="left"
                    android:drawablePadding="20dp"
                    android:layout_marginTop="20dp"
                    android:padding="0dp"
                    app:drawableLeftCompat="@drawable/ic_baseline_account_balance_wallet_24_red"
                    android:text="Type d'opération"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/typeOperationDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="55dp"
                    android:gravity="left"
                    android:text="244152.00 F"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/typeTransaction"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="left"
                    android:drawablePadding="20dp"
                    android:padding="0dp"
                    android:layout_marginTop="20dp"
                    app:drawableLeftCompat="@drawable/ic_baseline_compare_arrows_24"
                    android:text="Type de transaction"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/typeTransactionDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="55dp"
                    android:gravity="left"
                    android:text="20/03/2022, 14:52"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/typeTransaction"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="left"
                    android:drawablePadding="20dp"
                    android:layout_marginTop="20dp"
                    android:padding="0dp"
                    app:drawableLeftCompat="@drawable/idtransaction"
                    android:text="ID transaction"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/idTransaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="55dp"
                    android:gravity="left"
                    android:text="244152.00 F"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

            </LinearLayout>




